function tonemappedXYZ = wtTonemap(xyz,mode)

%thr = 80くらいが光沢感を保てるかも?

[iy,ix,iz] = size(xyz);
mat = zeros(iy,ix,iz);
maxlum = 97; 
cx2u = makecform('xyz2upvpl');
cu2x = makecform('upvpl2xyz');
uvl = applycform(xyz,cx2u);
mat = uvl;

if mode == 1
    % linear and log filter
    m = 1/2;
    thr = 80/m;
    [a, b] = wtSolve(m,thr); 
    isMaxlumOver = xyz(:,:,1) > thr;
    for i = 1:iy
        for j = 1:ix
            %disp(uvl(i,j,3));
            mat(i,j,3) = (1-isMaxlumOver(i,j)) * m*uvl(i,j,3) + isMaxlumOver(i,j) * a*log(uvl(i,j,3)+b);
            if mat(i,j,3) > maxlum
                mat(i,j,3) = maxlum;
            end
        end
    end
elseif mode == 2
    % Reinhard
    L = 10;d
    for i = 1:iy
        for j = 1:ix
            x = uvl(i,j,3);
            mat(i,j,3) = maxLum * x/(1+x)*(1+x/l^2);
            if mat(i,j,3) > maxLum
                mat(i,j,3) = maxLum;
        end
    end
end

tonemappedXYZ = applycform(mat,cu2x);

end
