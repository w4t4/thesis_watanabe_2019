load('ccmatrix.mat');
load('../img/mag1_0.4/SDsameDragon.mat');
[ix,iy,iz] = size(SDsame(:,:,:,1));
permuted = permute(SDsame(:,:,:,9),[3 1 2]);
reshaped = reshape(permuted,3,ix*iy);
rgb = ccmatrix.xyz2rgb * reshaped / 3;
max = zeros(1,3);
for i = 1:3
    for j = ix * iy
        if max < rgb(i,j)
            max = rgb(i,j);
        end
    end 
end
reshaped2 = reshape(rgb,3,ix,iy);
permuted2 = permute(reshaped2,[2 3 1]);
figure;
imshow(permuted2);
figure;
imshow(xyz2rgb(SDsame(:,:,:,1))/16);