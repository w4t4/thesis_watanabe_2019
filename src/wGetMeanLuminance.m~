
load('../img/mag3/SDdifferentDragon.mat');
mc = zeros(3,9,2);
luminance = zeros(1,9);
for i = 1:9
    load('../img/mag3/SDsameDragon.mat');
    ml(:,i,1) = calcMeanColor(SDsame(:,:,:,i));
    luminance(floor((i-1)/9) + 1,mod(i,9) + 1) = getLuminance(transpose(ml(:,i)));
end
for i = 1:9
    ml(:,i,2) = calcMeanColor(Ddiff(:,:,:,i));
    luminance(floor((i-1)/9) + 1,mod(i,9) + 1) = getLuminance(transpose(ml(:,i)));
end
save('ml.mat', 'ml');
save('luminance.mat', 'luminance');

function meanColor = calcMeanColor(xyz)
    [iy,ix,iz] = size(xyz);
    meanColor = zeros(1,3);
    cx2u = makecform('xyz2upvpl');
    cu2x = makecform('upvpl2xyz');
    uvl = applycform(xyz,cx2u);
    for i = 1:iz
        notZeroCount = 0;
        sum = 0;
        for j = 1:ix
            for k = 1:iy
                if (xyz(k,j,i) ~= 0)
                    notZeroCount = notZeroCount + 1;
                    sum = sum + uvl(k,j,i);
                end
            end
        end
        meanColor(i) = sum / notZeroCount;
    end
end

function l = getLuminance(xyz)
    C = makecform('xyz2xyl');
    xyl = applycform(xyz,C);
    l = xyl(3);
end